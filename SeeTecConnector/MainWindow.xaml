        <Button Content="Connection test Videoguard" HorizontalAlignment="Left" Margin="54,210,0,0" VerticalAlignment="Top" Width="173"/>
        <Button Content="Open Logs" HorizontalAlignment="Left" Margin="585,210,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <ListBox Name="listBox1" HorizontalAlignment="Left" Height="108" Margin="54,275,0,0" VerticalAlignment="Top" Width="635" />
        <Button Name="btnReconnect" Content="Reconnect" HorizontalAlignment="Left" Margin="576,92,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
