    <Grid Background="LightGray">

        <Menu Margin="0,0,0,386" Background="Gray">

            <MenuItem Header="_Menu" Height="29">
                <MenuItem Header="_Configuration" Click="MenuItem_Click" />
                <MenuItem Header="_Exit" Click="MenuItem_Click_1" />
            </MenuItem>
        </Menu>

        <Label Content="Connected:" HorizontalAlignment="Left" Margin="35,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0.231"/>
        <Label Name="labelConnection" Content="Unknown" HorizontalAlignment="Left" Margin="116,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0.231"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="35,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0.231"/>
        <Label Name="labelStatusSeeTec" Content="Unknown" HorizontalAlignment="Left" Margin="116,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0.231"/>
